{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "module": "ES2020",
    "moduleResolution": "node",
    "target": "ES2020",
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "types": ["node", "dotenv"]
  },
  "include": ["server/**/*", "shared/**/*"]
}
